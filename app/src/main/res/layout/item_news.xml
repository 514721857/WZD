<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/colorWihte"
    android:layout_height="@dimen/x120"
    android:orientation="vertical">
    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/news_head"
        android:layout_width="@dimen/x85"
        android:layout_height="@dimen/x85"
        android:layout_marginLeft="@dimen/x20"
        android:gravity="center"
        app:srcCompat="@mipmap/login_icon" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/news_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/know_item_textcolor"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x22"
            android:id="@+id/item_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:27" />

        <TextView
            android:textSize="@dimen/x30"
            android:textColor="@color/colorBlack"
            android:id="@+id/item_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="指道圈助手" />




    </RelativeLayout>

    <TextView
        android:textColor="@color/know_item_textcolor"
        android:textSize="@dimen/x25"
        android:layout_marginTop="@dimen/x10"
        android:layout_below="@+id/rel"
        android:id="@+id/item_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容" />
    </RelativeLayout>

    <View
        android:id="@+id/item_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/colorTextGray"
        />

</RelativeLayout>

