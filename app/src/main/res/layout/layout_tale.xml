<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/my_bg">

    <RelativeLayout
        android:layout_marginTop="@dimen/x20"
        android:background="@color/colorWihte"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x120"
        android:orientation="vertical">
        >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/news_head"
            android:layout_width="@dimen/x85"
            android:layout_height="@dimen/x85"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center"
            app:srcCompat="@mipmap/phone_icon" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/news_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/x30"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/item_news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="400-6686-765" />

                <TextView
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/know_item_textcolor"

                   android:layout_below="@+id/item_news_title"
                    android:textSize="@dimen/x25"
                    android:id="@+id/item_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询请拨打400官方电话" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/item_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/colorTextGray"
            />

    </RelativeLayout>



    <RelativeLayout
        android:background="@color/colorWihte"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x200"
        android:orientation="vertical">
        >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/weinxin_icon"
            android:layout_width="@dimen/x85"
            android:layout_height="@dimen/x85"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center"
            app:srcCompat="@mipmap/weixin_icon" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/weinxin_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/x30"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/weixin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="指道微信订阅号" />

                <TextView
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/know_item_textcolor"

                    android:layout_below="@+id/weixin_title"
                    android:textSize="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解指道资讯请关注公众号" />

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center"
            app:srcCompat="@mipmap/weixin_zd" />


    </RelativeLayout>



    <RelativeLayout
        android:background="@drawable/myitem_selector"
        android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:id="@+id/rel_company"

       >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/company_icon"
            android:layout_width="@dimen/x85"
            android:layout_height="@dimen/x85"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center"
            app:srcCompat="@mipmap/company_icon" />


        <TextView
            android:layout_toRightOf="@+id/company_icon"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x30"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/x20"
            android:id="@+id/item_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业简介" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_alignParentRight="true"
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/arrow" />

        <TextView
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textSize="@dimen/x30"
            android:layout_marginRight="@dimen/x24"
            android:layout_toLeftOf="@id/arrow"
            android:id="@+id/item_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右边title" />

    </RelativeLayout>




</LinearLayout>
